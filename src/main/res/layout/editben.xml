<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dip"

                android:orientation="vertical" >
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="10dip"
                    android:layout_marginBottom="10dip"
                    android:clickable="true"


                    card_view:cardBackgroundColor="@color/white"
                    card_view:cardCornerRadius="5dp"
                    card_view:cardElevation="5dp">

                    <LinearLayout


                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:paddingBottom="10dip"
                        android:paddingTop="10dip"


                        >





                        <RelativeLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"



                            >
                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:text="Name"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C2415" />

                            <EditText
                                android:id="@+id/phone8"
                                android:layout_below="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dip"
                                android:ems="10"

                                />
                        </RelativeLayout>

                        <LinearLayout
                            android:id = "@+id/gh"
                            android:visibility="gone"

                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/othbank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:text="Bank:"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415" />

                                <Spinner
                                    android:id="@+id/spin2"
                                    style="@style/SpinnerAppTheme"
                                    android:layout_below="@+id/othbank"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </Spinner>
                            </RelativeLayout>
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/othbranch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:text="Branch:"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415" />

                                <Spinner
                                    android:id="@+id/spin3"
                                    style="@style/SpinnerAppTheme"
                                    android:layout_below="@+id/othbranch"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                </Spinner>
                            </RelativeLayout>
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/othacc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415"
                                    android:text="Account Number:"


                                    />
                                <EditText
                                    android:id="@+id/edothacc"
                                    android:layout_below="@+id/othacc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:inputType="number"
                                    android:ems="10"

                                    />
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id = "@+id/rlwithin"


                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/bnamebc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415"
                                    android:text="Account Number:"


                                    />
                                <EditText
                                    android:id="@+id/phone9"
                                    android:layout_below="@+id/bnamebc"
                                    android:inputType="number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:ems="10"

                                    />
                            </RelativeLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:id = "@+id/rlphone"
                            android:visibility="gone"

                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"



                                >
                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dip"
                                    android:text="Mobile Number:"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="#3C2415" />

                                <AutoCompleteTextView
                                    android:id="@+id/toNumber"
                                    android:layout_below="@+id/textView4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dip"
                                    android:layout_marginRight="10dip"
                                    android:textColor="#000000"
                                    android:inputType="number"
                                    android:textColorHighlight="#000000"
                                    android:textColorLink="#000000"
                                    android:textStyle="bold"
                                    android:width="250dip" />
                            </RelativeLayout>

                        </LinearLayout>
                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="#3C2415"
                            android:padding="5dp"
                            android:text="OK"

                            android:layout_marginTop="10dip"
                            android:textColor="#ffffff" />


                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <RelativeLayout


                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"

 >

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="#3C2415"
                        android:padding="5dp"
                        android:text="Delete Beneficiary"

                        android:layout_marginTop="10dip"
                        android:textColor="#ffffff" />
                    </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>