<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:filterTouchesWhenObscured ="true"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"



            android:layout_height="0dp"
            android:layout_weight="1"  >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/layl"

                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/lylcal"

                        android:orientation="vertical" >

                        <RelativeLayout
                            android:id="@+id/lycal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/borderhmground"

                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="2"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_centerHorizontal="true"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <View
                                android:id="@+id/div1"
                                android:layout_width="30dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignLeft="@+id/tv"

                                android:layout_marginLeft="50dp"

                                android:background="@color/textcolorcircle" />
                            <View
                                android:id="@+id/div2"
                                android:layout_width="30dp"

                                android:layout_height="1dp"
                                android:layout_marginTop="25dp"

                                android:layout_alignRight="@+id/tv"

                                android:layout_marginRight="50dp"

                                android:background="@color/textcolorcircle" />

                            <TextView
                                android:id="@+id/tv2"
                                android:layout_height="40dp"
                                android:layout_width="40dp"

                                android:layout_alignRight="@+id/div2"
                                android:layout_marginRight="40dp"
                                android:layout_marginTop="5dp"
                                android:text="1"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:background="@drawable/bg_red"

                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/tv3"
                                android:layout_height="40dp"

                                android:layout_width="40dp"

                                android:layout_marginTop="5dp"
                                android:text="3"
                                android:textColor="@color/textcolorcircle"
                                android:textSize="20sp"
                                android:background="@drawable/bg_transparent"

                                android:layout_alignLeft="@+id/div1"
                                android:layout_marginBottom="20dp"
                                android:layout_marginLeft="40dp"
                                android:gravity="center_vertical|center_horizontal"
                                />
                            <TextView
                                android:id="@+id/textV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginBottom="20dp"
                                android:visibility="gone"
                                android:layout_below="@+id/tv"
                                android:textSize="12sp"
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:text="Please choose a transaction type and proceed to fill all fields"
                                android:textColor="#ffffff" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlag"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"

                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:text="LOAN REQUEST"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:text="Welcome to Loan Request facility.Select the store you wish to take a loan from"
                                android:textSize="14sp"
                                android:textColor="@color/black" />

                            <Spinner
                                android:id="@+id/spstore"
                                style="@style/SpinnerAppTheme"
                                android:layout_marginTop="20dp"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>

                            <TextView
                                android:id="@+id/txtelig"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"

                                android:textColor="@color/black"
                                android:text=""
                                android:textSize="14sp"
                           />


                        </LinearLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="1dip"
                            android:background="@color/white"
                            android:id="@+id/lyamo"
                            android:visibility="gone"



                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:text="Proceed to enter loan amount request below"/>
                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="1"
                                    android:text="Amount (\u20A6)"
                                    android:textColor="@color/black" />

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_below="@+id/textView4"


                                    android:ems="10"

                                    android:inputType="numberDecimal"
                                    android:layout_margin="10dp"
                                    android:hint="Enter Loan Amount"


                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:layout_weight="2"
                                    android:background="@android:color/transparent"

                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:background="@color/nbkyellow"/>



                        </LinearLayout>

                        <LinearLayout


                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:paddingBottom="5dip"
                            android:paddingTop="1dip"
                            android:background="@color/white"


                            >




                            <RelativeLayout


                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_below="@+id/rl6"
                                android:id="@+id/rl7"


                                >


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_sendnumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">



                                </android.support.design.widget.TextInputLayout>
                            </RelativeLayout>



                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:id="@+id/rl5"
                            android:visibility="gone"

                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/button2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:layout_marginLeft="30dp"
                                android:background="@drawable/mybutton"
                                android:padding="5dp"
                                android:text="OK"
                                android:filterTouchesWhenObscured ="true"
                                android:layout_marginTop="10dip"
                                android:layout_marginBottom="10dip"
                                android:textColor="@color/colorPrimary" />
                        </RelativeLayout>




                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>